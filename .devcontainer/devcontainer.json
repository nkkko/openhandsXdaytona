{
    "name": "OpenHands Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--pull=always",
        "-v", "/var/run/docker.sock:/var/run/docker.sock",
        "-p", "3000:3000",
        "--add-host", "host.docker.internal:host-gateway"
    ],
    "containerEnv": {
        "SANDBOX_RUNTIME_CONTAINER_IMAGE": "docker.all-hands.dev/all-hands-ai/runtime:0.13-nikolaik",
        "LOG_ALL_EVENTS": "true"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "remoteUser": "root",
    "postCreateCommand": "docker pull docker.all-hands.dev/all-hands-ai/runtime:0.13-nikolaik"
}
