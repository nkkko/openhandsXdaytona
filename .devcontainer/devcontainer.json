{
    "name": "OpenHands Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "runArgs": [
        "--privileged"
    ],
    "mounts": [
        "source=/var/run/docker-host.sock,target=/var/run/docker.sock,type=bind"
    ],
    "overrideCommand": false,
    "containerEnv": {
        "SANDBOX_RUNTIME_CONTAINER_IMAGE": "docker.all-hands.dev/all-hands-ai/runtime:0.13-nikolaik",
        "LOG_ALL_EVENTS": "true"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "remoteUser": "root",
    "postCreateCommand": "dockerd-entrypoint.sh & sleep 10 && docker pull docker.all-hands.dev/all-hands-ai/runtime:0.13-nikolaik"
}
